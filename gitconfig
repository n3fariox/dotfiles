[user]
    name = InsertNameHere
    email = InsertEmailHere
    username = InsertUsernameHere
[core]
    editor = "subl -n -w"
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[color "branch"]
    current = green bold
    local = yellow bold
    remote = cyan bold
[alias]
    ba = branch -a
    br = branch
    cb = checkout -b
    co = checkout
    ct = checkout --track
    ds = diff --staged
    fp = fetch --prune
    lg = log --oneline --decorate --graph
    pop = stash pop
    st = status
